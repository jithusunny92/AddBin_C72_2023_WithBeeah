<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_root_add_beah_code"
    tools:context=".bin.AddBeahCode">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_oges_AddBeahCode"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_image2"/>

    <RelativeLayout android:id="@+id/header_oges_AddBeahCode"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/img_logo"
            android:visibility="gone"
            android:src="@drawable/ic_logo_company"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:id="@+id/img_logout"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/logout"/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/container_option_AddBeahCode"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/header_oges_AddBeahCode"
        android:background="@color/white">

        <LinearLayout android:id="@+id/container_exit_AddBeahCode"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="26dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_exit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="18dp"
                android:text="Exit"
                android:textColor="#244D8D"
                android:textSize="9sp"/>
        </LinearLayout>

        <View android:id="@+id/vertical_line_one_AddBeahCode"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/container_exit_AddBeahCode"
            android:background="#244D8D"/>


        <LinearLayout android:id="@+id/container_change_capacity_AddBeahCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/vertical_line_one_AddBeahCode"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="26dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_change_capacity"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="14dp"
                android:text="Change Bin Capacity"
                android:textColor="#244D8D"
                android:textSize="9sp"/>
        </LinearLayout>

    </RelativeLayout>


    <LinearLayout android:id="@+id/container_selected_values_AddBeahCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/container_option_AddBeahCode"
        android:orientation="horizontal">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexWrap="wrap"
            app:alignItems="stretch"
            app:alignContent="stretch" >
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_location_black"/>
            <TextView android:id="@+id/tv_selected_governorate_value_AddBeahCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="2dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_double_right"/>
            <TextView android:id="@+id/tv_selected_willayat_value_AddBeahCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_double_right"/>
            <TextView android:id="@+id/tv_selected_capacity_value_AddBeahCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"/>
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/container_selected_values_two_AddBeahCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="36dp"
        android:layout_below="@+id/container_selected_values_AddBeahCode"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_double_right"/>
        <TextView android:id="@+id/tv_selected_manufacturer_value_AddBeahCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>


    <TextView android:id="@+id/tv_label_enter_4_digit_AddBeahCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:layout_below="@+id/container_selected_values_two_AddBeahCode"
        android:text="Enter the last 5 digit number of BEAH code"/>

    <EditText android:id="@+id/et_AddBeahCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_label_enter_4_digit_AddBeahCode"
        android:layout_marginLeft="56dp"
        android:layout_marginRight="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="36dp"
        android:maxLength="5"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:background="@drawable/edit_text_bg"/>

